int acumulardos(int n, int m)
{
	int c=0,w,u,q;
	if(n<m){
	for(int i=1;i<=m;i=i*10)
	{
		u=(m/i)%10;
		c=c+1;
	}
		
	w=n*powf(10,c);
	q=w+m;}
	else{
		for(int i=1;i<=n;i=i*10)
	{
		u=(n/i)%10;
		c=c+1;
	}
		
	w=m*powf(10,c);
	q=w+n;}

	return q;
}
int depurar(int n)
{int mayor=0,u,numero=0,j=1;
	for(int i=1;i<=n;i=i*10)
	{
		u=(n/i)%10;
		if(mayor<u)
			mayor=u;
	}
for(int i=1;i<=n;i=i*10)
	{
		u=(n/i)%10;
		if(u!=mayor)
			{numero=numero+(u*j);
		j=j*10;
		}
}
return numero;
}
int eliminarigual( int n)
{int u,numero=0,j=1,a,c=0;
	for(int i=1;i<=n;i=i*10)
	{	a=(n/i)%10;
		for(int m=1;m<=n;m=m*10)
		{	 c=0;
		u=(n/m)%10;
		if(a==u){
			c=c+1;}
		}
		if(c==1)
			{numero=numero+(a*j);
		j=j*10;
		
		}
	
}

	return numero;
}
int invertir(int n)
{	int u,c,d=0,e=0;
	for(int i=1;i<=n;i=i*10)
	{	u=(n/i)%10;
	
	e=e+1;
	}
	c=e;
	for(int i=1;i<=n;i=i*10)
	{
		u=(n/i)%10;
		
		d=d+(u*powf(10,c-1));
		c=c-1;
		
	}	
	return d;
}
int insertar_valor(int n, int m)
{int c=0,t=0,numero=0,u,num,listo,j=1,cont=1,k=0;
	num=invertir(n);
	for(int i=1;i<=num;i=i*10)
	{	u=(num/i)%10;
		cont=cont+1;
		if(m>u){
		c=c+1;
		}
	}
	
	for(int i=1;t<=cont;t++)
	{	if(c==t){
			numero=numero+(m*powf(10,c));
				}
		else{
			u=(num/i)%10;
			numero=numero+(u*powf(10,t));
			i=i*10;
			}
		}
		
	
	listo=invertir(numero);
return listo;
}
int capicua(int n)
{	int num,a,c=0,u;
	num=invertir(n);
	for(int i=1;i<=num;i=i*10)
	{	u=(num/i)%10;
		a=(n/i)%10;
		if(a!=u){
			c=1;
		}
	}


return c;
}
void planilla(int n)
{int a,sueldo,a_pagar=0;
	for(int i=1;i<=n;i++){
 cout<<"   EL trabajador "<<i<<" // Horas trabajadas: ";
 cin>>a;
 sueldo=a*20;
 a_pagar=a_pagar+sueldo;
 cout<<"---A pagar: "<<sueldo<<endl;
	}

cout<<"///Total deuda con los trabajadores: "<<a_pagar;

}
