void convertir_letras(char a[])
{
	cout<<"Todo a mayusculas"<<endl;
	strupr(a);

	cout<<a<<endl;
	cout<<"Todo a minusculas"<<endl;
	strlwr(a);
	cout<<a<<endl;	
}
